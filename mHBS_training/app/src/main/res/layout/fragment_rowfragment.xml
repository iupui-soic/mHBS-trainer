<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tablePopulation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="0dp"
    android:background="@drawable/border">

    <GridLayout android:layout_margin="0dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </GridLayout>

    <GridLayout
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="@color/black"
            android:visibility="visible" />

        <GridLayout
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/institution"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginTop="0dp"
                android:drawableStart="@drawable/ic_education"
                android:gravity="top"
                android:text="HBS"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titleLocation"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:drawableStart="@drawable/ic_institution"
                android:gravity="top|bottom|fill"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="N301"
                android:textSize="14sp" />


        </GridLayout>

    </GridLayout>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="right"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btn_favorites"
            style="@style/AppTheme"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:button="@drawable/check"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="end"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textOff="@null"
            android:backgroundTint="@color/white"
            android:textOn="@null"
            android:textSize="0sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:srcCompat="@drawable/ic_download_addition" />

    </TableRow>


</TableLayout>



