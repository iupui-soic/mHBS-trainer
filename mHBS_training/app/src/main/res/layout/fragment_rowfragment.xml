<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/tablePopulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:gravity="center">
        <TableRow android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent">



            <ImageView
                android:id="@+id/textView2"
                android:layout_width="194dp"
                android:layout_height="100dp"
                android:background="#31b9b9" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titleResource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    android:textColor="#000"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/titleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N301"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_institution"/>

                <TextView
                    android:id="@+id/institution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HBS"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_education"/>


            </LinearLayout>



        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"

            >

            <ImageView
                android:id="@+id/downloadHolder"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_download_addition"
                android:textSize="14sp" />


            <ToggleButton
                android:id="@+id/toggle"
                android:layout_width="wrap_content"
                android:background="#fff"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:button="@drawable/check"
                android:focusable="false"
                android:textSize="0sp"
                android:textOff="@null"
                android:textOn="@null"
                android:minHeight="10dp"
                android:minWidth="30dp"
                android:focusableInTouchMode="false" />

        </TableRow>

        <View android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cacaca"/>

    </TableLayout>


